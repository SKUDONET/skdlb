{
	"method": "POST",
	"url": "/certificates/pem",
	"action": "create",
	"description": "Create a PEM Certificate (PEM file).",
	"params": {
		"name": {
			"description": "Certificate ID name.",
			"regex": "$certificate_name",
			"non_blank": "true",
			"required": "true"
		},
		"key": {
			"description": "No Encrypted Private Key",
			"non_blank": "true",
			"required": "true"
		},
		"ca": {
			"description": "Server Certificate or fullchain Certificate",
			"non_blank": "true",
			"required": "true"
		},
		"intermediates": {
			"description": "Intermediate Certificates if needed",
			"non_blank": "true"
		}
	}
}
