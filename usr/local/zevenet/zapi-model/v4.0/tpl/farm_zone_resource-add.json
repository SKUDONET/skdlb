{
	"method": "POST",
	"url": "/farms/<farmname>/zones/<id>/resources",
	"action": "add",
	"description": "Create a new resource in a given zone in a GSLB Farm",
	"params": {
		"rname": {
			"regex": "$resource_name",
			"non_blank": "true",
			"required": "true"
		},
		"ttl": {
			"regex": "$resource_ttl"
		},
		"type": {
			"regex": "$resource_type",
			"values": [
				"NS",
				"A",
				"AAAA",
				"CNAME",
				"DYNA",
				"MX",
				"SRV",
				"TXT",
				"PTR",
				"NAPTR"
			],
			"required": "true",
			"non_blank": "true"
		},
		"rdata": {
			"required": "true",
			"non_blank": "true"
		}
	}
}
