{
	"method": "POST",
	"url": "/ipds/rbl",
	"action": "create",
	"description": "Create an RBL rule to be used on farms.",
	"params": {
		"name": {
			"description": "RBL rule name. It is used as a unique identifier.",
			"regex": "$rbl_name",
			"non_blank": "true",
			"required": "true",
			"exceptions": [
				"domains",
				"0"
			]
		},
		"copy_from": {
			"description": "",
			"regex": "$rbl_name",
			"non_blank": "true"
		}
	}
}
