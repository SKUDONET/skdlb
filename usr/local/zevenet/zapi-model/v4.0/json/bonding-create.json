{
   "action" : "create",
   "description" : "Create a bonding interface joining NIC interfaces.",
   "method" : "POST",
   "params" : {
      "mode" : {
         "non_blank" : "true",
         "required" : "true",
         "values" : [
            "balance-rr",
            "active-backup",
            "balance-xor",
            "broadcast",
            "802.3ad",
            "balance-tlb",
            "balance-alb"
         ]
      },
      "name" : {
         "non_blank" : "true",
         "regex" : "(?^:[a-zA-Z0-9\\-]{1,15})",
         "required" : "true"
      },
      "slaves" : {
         "ref" : "array",
         "required" : "true"
      }
   },
   "url" : "/interfaces/bonding"
}
