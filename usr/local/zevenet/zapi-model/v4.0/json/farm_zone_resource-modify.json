{
   "action" : "set",
   "description" : "Modify the parameters of a resouce in a zone of a GSLB Farm.",
   "method" : "PUT",
   "params" : {
      "rdata" : {
         "non_blank" : "true"
      },
      "rname" : {
         "non_blank" : "true",
         "regex" : "(?^:(?:[\\w\\-\\.]+|\\@))"
      },
      "ttl" : {
         "regex" : "(?^:[1-9]\\d*)"
      },
      "type" : {
         "non_blank" : "true",
         "regex" : "(?^:(?:NS|A|AAAA|CNAME|DYNA|MX|SRV|TXT|PTR|NAPTR))",
         "values" : [
            "NS",
            "A",
            "AAAA",
            "CNAME",
            "DYNA",
            "MX",
            "SRV",
            "TXT",
            "PTR",
            "NAPTR"
         ]
      }
   },
   "url" : "/farms/<farmname>/zones/<id>/resources/<id>"
}
